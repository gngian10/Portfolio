<style is:global>
  * {
    cursor: none !important;
  }

  .custom-selector {
    position: fixed;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    pointer-events: none;
    transition: transform 0.03s linear;
    z-index: 999;

    @apply bg-orange-300/90 shadow-md;
  }
</style>

<script is:inline>
  const customSelector = document.createElement("div");

  customSelector.classList.add("custom-selector");
  document.body.appendChild(customSelector);

  window.addEventListener("mousemove", (e) => {
    customSelector.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
  });
</script>
