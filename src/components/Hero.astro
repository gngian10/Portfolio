        0% {
            transform: rotate(0deg);
        }
        10% {
            transform: rotate(15deg);
        }
        20% {
            transform: rotate(-9deg);
        }
        30% {
            transform: rotate(15deg);
        }
        40% {
            transform: rotate(-5deg);
        }
        50% {
